{
  "manifest_version": 3,
  "name": "Anime-sama Profile Saver",
  "version": "1.0.0",
  "description": "Sauvegarde et restauration automatique du profil Anime-sama.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
	"https://anime-sama.eu/*",
	"https://*.anime-sama.eu/*",
	"https://anime-sama.fr/*",
	"https://*.anime-sama.fr/*",
	"https://anime-sama.com/*",
	"https://*.anime-sama.com/*",
	"https://anime-sama.org/*",
	"https://*.anime-sama.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}
